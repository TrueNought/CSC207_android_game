<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackendStorage.PreferenceEditor" >

    <Button
        android:id="@+id/end2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:onClick="clickFinish"
        android:text="@string/finish_key" />

    <ImageView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/day"
        app:srcCompat="@drawable/day" />

    <ImageView
        android:id="@+id/night"
        android:layout_width="match_parent"
        android:layout_height="392dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/night"
        app:srcCompat="@drawable/night" />

    <TextView
        android:id="@+id/dn"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="269dp"
        android:layout_marginBottom="172dp"
        android:background="#726A6A"
        android:backgroundTint="#292828"
        android:backgroundTintMode="add"
        android:text="   Toggle Between Day/Night:      "
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Switch
        android:id="@+id/d-n"
        android:layout_width="65dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="441dp"
        android:layout_marginBottom="137dp"
        android:buttonTint="@color/colorAccent"
        android:onClick="clickDaySwitch"
        android:showText="false"
        android:splitTrack="true"
        android:textOff="Night"
        android:textOn="Day" />
</RelativeLayout>