<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nbg"
    android:clickable="true"
    android:onClick="startGame"
    tools:context="com.example.phase2.MainActivity">

    <ImageView
        android:id="@+id/vegetation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/forestd" />

    <ImageView
        android:id="@+id/vegetation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/forestd" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="738dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:onClick="startGame"
        app:srcCompat="@drawable/main_bg" />

    <ImageView
        android:id="@+id/grass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/hills_layer_5" />

    <ImageView
        android:id="@+id/grass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="28dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hills_layer_5" />

</RelativeLayout>